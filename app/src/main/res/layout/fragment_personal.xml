<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
	>

	<data>

		<import type="android.view.View"/>

		<variable
			name="vm"
			type="com.ukyoo.v2client.viewmodels.PersonalViewModel"/>

	</data>

	<LinearLayout
		android:gravity="center_horizontal"
		android:orientation="vertical"
		android:background="@color/bg_gray"
		android:layout_width="match_parent"
		android:paddingLeft="16dp"
		android:paddingEnd="16dp"
		android:paddingTop="16dp"
		android:layout_height="match_parent">

		<androidx.cardview.widget.CardView
			android:id="@+id/cardview"
			app:cardCornerRadius="5dp"
			app:cardElevation="5dp"
			android:layout_width="match_parent"
			android:layout_height="100dp">

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent">

				<com.ukyoo.v2client.widget.CircleImageView
					android:onClick="@{() -> vm.callToLogin()}"
					android:layout_marginStart="10dp"
					android:layout_centerVertical="true"
					app:url="@{vm.profileModel.avatar}"
					app:avatar="@{true}"
					android:id="@+id/iv_avatar"
					android:layout_width="80dp"
					android:layout_height="80dp"
					android:scaleType="centerCrop"
					android:src="@drawable/user"/>

				<TextView
					android:layout_toEndOf="@+id/iv_avatar"
					android:layout_alignTop="@+id/iv_avatar"
					tools:text="请登录"
					android:text="@{vm.profileModel.username ?? @string/please_login}"
					android:layout_marginStart="20dp"
					android:textColor="@color/colorBlack"
					android:textSize="25sp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/tv_username"/>

			</RelativeLayout>


		</androidx.cardview.widget.CardView>

		<LinearLayout
			android:padding="10dp"
			android:background="@color/white"
			android:layout_marginTop="20dp"
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="100dp">

			<LinearLayout
				android:orientation="vertical"
				android:gravity="center"
				android:layout_weight="1"
				android:layout_width="0dp"
				android:layout_height="match_parent">

				<TextView
					android:gravity="center"
					android:text="节点收藏"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>

				<TextView
					android:text="@{String.valueOf(vm.profileModel.nodes)}"
					tools:text="111"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>


			</LinearLayout>


			<LinearLayout
				android:orientation="vertical"
				android:gravity="center"
				android:layout_weight="1"
				android:layout_width="0dp"
				android:layout_height="match_parent">

				<TextView
					android:gravity="center"
					android:text="主题收藏"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>

				<TextView
					android:text="@{String.valueOf(vm.profileModel.topics)}"
					tools:text="111"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>


			</LinearLayout>

			<LinearLayout
				android:orientation="vertical"
				android:gravity="center"
				android:layout_weight="1"
				android:layout_width="0dp"
				android:layout_height="match_parent">

				<TextView
					android:gravity="center"
					android:text="特别关注"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>

				<TextView
					android:text="@{String.valueOf(vm.profileModel.followings)}"
					tools:text="111"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>


			</LinearLayout>

		</LinearLayout>

		<com.ukyoo.v2client.widget.SettingView
			android:layout_marginTop="30dp"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			app:img_left="@drawable/user"
			app:tv_desc="创建的主题"/>

		<View
			android:id="@+id/v_line_olshop"
			android:visibility="gone"
			style="@style/divider_line"
			android:layout_marginLeft="18dp"/>

		<com.ukyoo.v2client.widget.SettingView
			android:layout_width="match_parent"
			android:layout_height="50dp"
			app:img_left="@drawable/user"
			app:tv_desc="我的回复"/>

		<androidx.appcompat.widget.AppCompatButton
			android:background="@drawable/shape_coener30_black"
			android:onClick="@{() -> vm.exitLogin()}"
			android:layout_marginTop="20dp"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/text_input_verify"
			android:id="@+id/btn_login"
			android:text="退出"
			android:textColor="@color/white"
			android:layout_width="150dp"
			android:layout_height="40dp"/>


	</LinearLayout>

</layout>