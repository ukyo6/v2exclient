<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
	>

	<data>

		<import type="android.view.View"/>

		<variable
			name="vm"
			type="com.ukyoo.v2client.viewmodels.PersonalViewModel"/>

	</data>

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<ImageView
			app:blurBg="@{vm.profileModel.avatar}"
			android:id="@+id/iv_blur_bg"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:scaleType="centerCrop"
			app:layout_collapseMode="parallax"/>

		<com.ukyoo.v2client.widget.CircleImageView
			android:onClick="@{() -> vm.callToLogin()}"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			android:layout_marginStart="30dp"
			android:layout_marginTop="30dp"
			app:url="@{vm.profileModel.avatar}"
			android:id="@+id/iv_avatar"
			android:layout_width="80dp"
			android:layout_height="80dp"
			android:scaleType="centerCrop"
			tools:src="@drawable/user"/>

		<TextView
			android:text="@{vm.profileModel.username}"
			android:layout_marginStart="20dp"
			app:layout_constraintLeft_toRightOf="@+id/iv_avatar"
			app:layout_constraintTop_toTopOf="@+id/iv_avatar"
			tools:text="小白"
			android:textColor="@color/colorBlack"
			android:textSize="25sp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/tv_username"/>






	</androidx.constraintlayout.widget.ConstraintLayout>

</layout>