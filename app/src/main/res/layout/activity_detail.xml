<layout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	>

	<data>

		<import type="android.view.View"/>

		<variable
			name="vm"
			type="com.ukyoo.v2client.viewmodels.DetailViewModel"/>

		<variable
			name="presenter"
			type="com.ukyoo.v2client.base.Presenter"/>

	</data>

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">


		<androidx.appcompat.widget.Toolbar
			app:title="主题"
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:background="@color/colorPrimary"
			android:layout_height="?attr/actionBarSize"
			android:theme="@style/AppTheme.AppBarOverlay"
			app:popupTheme="@style/AppTheme.PopupOverlay"/>


		<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
			app:layout_constraintBottom_toTopOf="@+id/include_reply"
			app:layout_constraintTop_toBottomOf="@+id/toolbar"
			app:layout_behavior="@string/appbar_scrolling_view_behavior"
			android:id="@+id/refresh_layout"
			app:onRefresh="@{presenter}"
			app:refreshing="@{vm.loading}"
			android:layout_width="match_parent"
			android:layout_height="0dp">

			<FrameLayout
				android:focusableInTouchMode="true"
				android:focusable="true"
				android:id="@+id/container"
				android:layout_width="match_parent"
				android:layout_height="match_parent">

				<androidx.recyclerview.widget.RecyclerView
					android:id="@+id/recyclerview"
					android:layout_width="match_parent"
					android:layout_height="match_parent"/>

				<include
					layout="@layout/empty_layout"
					android:visibility="@{vm.empty?View.VISIBLE:View.GONE}"/>

			</FrameLayout>


		</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


		<include
			app:layout_constraintTop_toBottomOf="@+id/refresh_layout"
			android:id="@+id/include_reply"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:layout_constraintBottom_toBottomOf="parent"
			layout="@layout/common_enter_layout"/>


	</androidx.constraintlayout.widget.ConstraintLayout>


</layout>