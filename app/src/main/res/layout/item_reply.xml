<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools">

	<data>


		<variable
			name="item"
			type="com.ukyoo.v2client.data.entity.ReplyModel"/>

		<variable
			name="index"
			type="Integer"/>

		<variable
			name="presenter"
			type="com.ukyoo.v2client.inter.ItemClickPresenter"/>

	</data>

	<androidx.constraintlayout.widget.ConstraintLayout
		android:onClick="@{(v) -> presenter.onItemClick(v,item)}"
		android:layout_marginTop="8dp"
		android:paddingLeft="16dp"
		android:paddingRight="16dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<com.ukyoo.v2client.widget.CircleImageView
			app:url="@{item.member.avatar}"
			android:id="@+id/iv_avatar"
			android:layout_width="36dp"
			android:layout_height="36dp"
			android:scaleType="centerCrop"
			tools:src="@drawable/user"/>

		<TextView
			android:text="@{item.member.username}"
			android:id="@+id/replier"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			tools:text="author"
			android:textColor="#3bbd79"
			android:textSize="12sp"
			app:layout_constraintStart_toEndOf="@+id/iv_avatar"
			android:layout_marginStart="8dp"/>

		<TextView
			android:text="@{item.created}"
			android:id="@+id/time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			tools:text="1分钟前"
			android:textColor="#aaa"
			android:textSize="12sp"
			app:layout_constraintStart_toEndOf="@+id/replier"
			android:layout_marginStart="8dp"/>

		<TextView
			android:text="@{@string/which_floor(index)}"
			android:id="@+id/which_floor"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			tools:text="第1楼"
			android:textColor="#aaa"
			android:textSize="12sp"
			app:layout_constraintEnd_toEndOf="parent"/>

		<com.ukyoo.v2client.widget.RichTextView
			tools:text="内容"
			app:richTexts="@{item.contentRendered}"
			android:id="@+id/content"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:gravity="start"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/replier"
			app:layout_constraintStart_toStartOf="@+id/replier"/>

		<CheckBox
			android:id="@+id/commentBtn"
			android:layout_width="50dp"
			android:layout_height="22dp"
			android:layout_alignParentEnd="true"
			android:button="@drawable/checkbox_comment"
			app:layout_constraintTop_toBottomOf="@+id/content"
			android:layout_marginTop="8dp"
			app:layout_constraintEnd_toEndOf="parent"/>

		<View
			style="@style/divider_line"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"/>


	</androidx.constraintlayout.widget.ConstraintLayout>

</layout>

