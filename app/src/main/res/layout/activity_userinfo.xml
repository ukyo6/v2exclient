<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
	>

	<data>

		<variable
			name="vm"
			type="com.ukyoo.v2client.viewmodel.UserInfoViewModel"/>

	</data>

	<androidx.coordinatorlayout.widget.CoordinatorLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fitsSystemWindows="true">

		<com.google.android.material.appbar.AppBarLayout
			android:id="@+id/app_bar"
			android:fitsSystemWindows="true"
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:theme="@style/AppTheme.AppBarOverlay">

			<com.google.android.material.appbar.CollapsingToolbarLayout
				android:id="@+id/toolbar_layout"
				android:fitsSystemWindows="true"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				app:toolbarId="@+id/toolbar"
				app:layout_scrollFlags="scroll|exitUntilCollapsed"
				app:contentScrim="?attr/colorPrimary">

				<androidx.constraintlayout.widget.ConstraintLayout
					android:paddingBottom="10dp"
					app:layout_collapseMode="parallax"
					app:contentScrim="?attr/colorPrimary"
					app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
					android:layout_width="match_parent"
					android:layout_height="match_parent">


					<ImageView
						app:blurBg="@{vm.memberModel.avatar_large}"
						android:id="@+id/iv_blur_bg"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:scaleType="centerCrop"
						app:layout_collapseMode="parallax"/>

					<com.ukyoo.v2client.widget.CircleImageView
						app:layout_constraintLeft_toLeftOf="parent"
						app:layout_constraintTop_toTopOf="parent"
						android:layout_marginStart="30dp"
						android:layout_marginTop="30dp"
						app:url="@{vm.memberModel.avatar_large}"
						android:id="@+id/iv_avatar"
						android:layout_width="80dp"
						android:layout_height="80dp"
						android:scaleType="centerCrop"
						tools:src="@drawable/user"/>

					<TextView
						android:text="@{vm.memberModel.username}"
						android:layout_marginStart="20dp"
						app:layout_constraintLeft_toRightOf="@+id/iv_avatar"
						app:layout_constraintTop_toTopOf="@+id/iv_avatar"
						tools:text="小白"
						android:textColor="@color/colorBlack"
						android:textSize="25sp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/tv_username"/>

					<TextView
						android:text="@{vm.registerTimeAndNum}"
						android:textColor="@color/colorBlack"
						android:layout_marginEnd="30dp"
						android:maxLines="2"
						android:layout_marginTop="5dp"
						app:layout_constraintLeft_toLeftOf="@+id/tv_username"
						app:layout_constraintTop_toBottomOf="@+id/tv_username"
						app:layout_constraintRight_toRightOf="parent"
						android:textSize="18sp"
						tools:text="12345677890123848"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:id="@+id/tv_desc"/>


					<TextView
						android:maxLines="1"
						android:ellipsize="end"
						android:text="@{vm.memberModel.github}"
						android:drawablePadding="5dp"
						android:textSize="15sp"
						android:gravity="center_vertical"
						android:drawableStart="@drawable/ic_github"
						tools:text="未设置"
						android:layout_width="100dp"
						android:layout_height="40dp"
						android:id="@+id/tv_github"
						app:layout_constraintTop_toBottomOf="@+id/tv_desc"
						app:layout_constraintLeft_toLeftOf="@+id/tv_username"/>

					<TextView
						android:maxLines="1"
						android:ellipsize="end"
						android:text="@{vm.memberModel.website}"
						android:layout_marginStart="10dp"
						android:drawablePadding="5dp"
						android:textSize="15sp"
						android:gravity="center_vertical"
						android:drawableStart="@drawable/ic_homepage"
						tools:text="未设置"
						android:layout_width="100dp"
						android:layout_height="40dp"
						android:id="@+id/tv_location"
						app:layout_constraintLeft_toRightOf="@+id/tv_github"
						app:layout_constraintTop_toTopOf="@+id/tv_github"/>

					<TextView
						android:maxLines="1"
						android:ellipsize="end"
						android:text="@{vm.memberModel.twitter}"
						android:layout_marginTop="5dp"
						android:drawablePadding="5dp"
						android:textSize="15sp"
						android:gravity="center_vertical"
						android:drawableStart="@drawable/ic_twitter"
						tools:text="未设置"
						android:layout_width="100dp"
						android:layout_height="40dp"
						android:id="@+id/tv_twitter"
						app:layout_constraintTop_toBottomOf="@+id/tv_github"
						app:layout_constraintStart_toStartOf="@+id/tv_github"/>

					<TextView
						android:maxLines="1"
						android:ellipsize="end"
						android:text="@{vm.memberModel.location}"
						android:layout_marginStart="10dp"
						android:layout_marginTop="5dp"
						android:drawablePadding="5dp"
						android:textSize="15sp"
						android:gravity="center_vertical"
						android:drawableStart="@drawable/ic_location"
						tools:text="未设置"
						android:layout_width="100dp"
						android:layout_height="40dp"
						app:layout_constraintTop_toBottomOf="@+id/tv_github"
						app:layout_constraintStart_toEndOf="@+id/tv_twitter"/>


				</androidx.constraintlayout.widget.ConstraintLayout>

				<androidx.appcompat.widget.Toolbar
					android:visibility="visible"
					app:layout_collapseMode="pin"
					android:id="@+id/toolbar"
					android:layout_width="match_parent"
					android:layout_height="?attr/actionBarSize"
					app:popupTheme="@style/AppTheme.PopupOverlay"
					/>


			</com.google.android.material.appbar.CollapsingToolbarLayout>


			<com.google.android.material.tabs.TabLayout
				android:id="@+id/tab_layout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:tabIndicatorColor="@color/colorAccent"
				app:tabMode="fixed"
				app:tabPaddingStart="16dp"
				app:tabSelectedTextColor="@color/colorAccent"
				app:tabTextColor="@color/colorAccentAlpha"/>

		</com.google.android.material.appbar.AppBarLayout>

		<androidx.viewpager.widget.ViewPager
			android:id="@+id/viewpager"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

	</androidx.coordinatorlayout.widget.CoordinatorLayout>


</layout>